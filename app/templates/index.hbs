{{#metro-tile-area}}
	{{#metro-tile-group}}
		{{#each model as |tile|}}
			{{#metro-tile size="large" class="block-shadow-impact"}}
				{{#link-to "posts.show" tile.id class="tile-content slide-left"}}
					<div class="slide bg-cyan fg-white">
						<p>{{tile.title}}</p>
					</div>
					<div class="slide-over ribbed-black fg-white">
						<p>{{tile.teaser}}</p>
					</div>
				{{/link-to}}
			{{/metro-tile}}
		{{/each}}
	{{/metro-tile-group}}
{{/metro-tile-area}}
