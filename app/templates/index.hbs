{{#metro-tile-area}}
	{{#metro-tile-group}}
		{{#each tiles as |tile|}}
			{{#metro-tile size=tile.size}}
				{{#link-to "posts.show" tile.id class="tile-content"}}
					<div class="slide">
						{{tile.title}}
					</div>
				{{/link-to}}
			{{/metro-tile}}
		{{/each}}
	{{/metro-tile-group}}
{{/metro-tile-area}}
